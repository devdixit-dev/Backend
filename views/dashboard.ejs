<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>User Dashboard</title>
</head>

<body class="w-screen h-screen bg-zinc-800 text-white px-4">
  <div class="flex justify-between items-center text-center">
    <h2 class="text-lg">Hello, <%= user.name %> ðŸ‘‹</h2>
    <form action="/user/logout" method="post">
      <button type="submit" class="mt-4 text-sm px-4 py-2 bg-red-500 rounded-sm cursor-pointer">Logout</button>
    </form>
  </div>

  <div>
    <h2 class="mb-4">You can create a new post</h2>
    <form action="/user/post" method="post">
      <textarea name="content"
        class="w-1/3 min-h-30 px-4 py-3 outline-none resize-none bg-transparent border-2 border-zinc-500 rounded-md"
        placeholder="What's on your mind?"></textarea>
      <button type="submit" class="block text-sm w-40 mt-4 px-4 py-2 bg-blue-500 rounded-sm cursor-pointer">Create new
        post</button>
    </form>
  </div>

  <div class="posts mt-10">
    <h3 class="text-[18px] text-zinc-400">Your posts</h3>
    <div class="post-container">

      <% user.posts.reverse().forEach(function(post) { %>
        <div class="post w-1/3 p-2 border-[1px] border-zinc-700 mt-4 rounded-lg">
          <h4 class="text-md mb-2 text-blue-500"> <%= user.name %> </h4>
          <p class="text-sm tracking-tight"> <%= post.content %> </p>
          <div class="flex gap-4 mt-2">
            <a href="" class="text-blue-500">Like</a>
            <a href="" class="text-zinc-600">edit</a>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>